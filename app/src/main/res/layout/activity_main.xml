<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/textView10"
            android:layout_width="332dp"
            android:layout_height="113dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text = " Neural Network Research. \ nPerceptron Model "
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="16dp"/>

    <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="140dp"
            android:text="P=4; A(0,6), B(1,5), C(3,3), D(2,4)"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="16dp"/>

    <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="124dp"
            android:layout_marginTop="348dp"
            android:background="#3D493C"
            android:onClick="onButtonClick"
            android:text = " Get started "
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="124dp"/>

    <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="204dp"
            android:text = " Learning Speed: "
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="16dp"/>

    <Spinner
            android:id="@+id/spinner3"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginStart="232dp"
            android:layout_marginTop="304dp"
            android:entries="@array/number_of_iterations"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="232dp"/>

    <Spinner
            android:id="@+id/spinner2"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginStart="232dp"
            android:layout_marginTop="256dp"
            android:entries="@array/deadline_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="232dp"/>

    <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="304dp"
            android:text = " Deadline for iterations: "
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="16dp"/>

    <Spinner
            android:id="@+id/spinner"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginStart="232dp"
            android:layout_marginTop="204dp"
            android:entries="@array/learning_speed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="232dp"/>

    <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="256dp"
            android:text = " Temporary Deadline (sec): "
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="16dp"/>

    <TextView
            android:id="@+id/result"
            android:layout_width="339dp"
            android:layout_height="147dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="404dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>